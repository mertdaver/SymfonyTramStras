{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<h1>
		<a href="{{ path('app_categorie') }}">La liste des topics de
			{{ categorie.getNomCategorie() }}</a>
	</h1>

	{% for topic in categorie.topics %}
		<br>
		<p>
			<a href="{{ path('app_topic_show', {'id': topic.id}) }}">{{ topic }}</a>
		</p>
		<p>
			Créé par :
			{% if topic.user %}
				{{ topic.user.pseudo }}
			{% else %}
				Utilisateur inconnu
			{% endif %}
		</p>

		{% if is_authenticated and topic.user == user %}
			<a class="btn btn-warning" href="{{ path('delete_topic', {'id': topic.id}) }}" onclick="return confirmDelete('{{ path('delete_topic', {'id': topic.id}) }}');">Delete</a>
		{% endif %}

		<br>
	{% endfor %}

	<hr>

	<h2>Ajouter un nouveau topic</h2>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button type="submit" class="btn btn-primary">Ajouter</button>
	{{ form_end(form) }}

	<script>
		function confirmDelete(url) {
if (confirm('Êtes-vous sûr de vouloir supprimer ce topic et tous ses posts associés ?')) {
window.location.href = url;
}
return false;
}
	</script>
{% endblock %}
