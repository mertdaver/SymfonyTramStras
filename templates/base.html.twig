		<link rel="icon" href="{{ asset('icon.ico') }}" type="image/icon">
        <link rel="stylesheet" href="{{ asset('stylesheet.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" />
