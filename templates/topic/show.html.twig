{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}


	<h1>
		<a href="{{ path('app_topic') }}">La liste des posts du Topic : 
			{{ topic.getTitre() }}</a>
	</h1>

<ul>
    {% for post in posts %}
        Message de {{ post.user }} : <br>
        {{ post.text }} <br>
        post√© le : {{ post.datePost|date('Y-m-d H:i:s') }} <br><br><br>
    {% endfor %}
</ul>

<hr>

	<h2>Ajouter un nouveau post</h2>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button type="submit" class="btn btn-primary">Ajouter</button>
	{{ form_end(form) }}

{% endblock %}
