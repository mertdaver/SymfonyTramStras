{% extends 'base.html.twig' %}

{% block title %}Timetable{% endblock %}

{% block body %}
    <h1>Timetable for Stop Code: {{ stopCode }}</h1>
    <table>
        <thead>
            <tr>
                <th>Stop Point Name</th>
                <th>Expected Departure Time</th>
            </tr>
        </thead>
        <tbody>
            {% for stopTime in stopTimes %}
                <tr>
                    <td>{{ stopTime.stopPointName }}</td>
                    <td>{{ stopTime.expectedDepartureTime }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">No upcoming departures</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
